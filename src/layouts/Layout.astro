---
import Footer from "../components/Footer/Footer.astro";
import DarkMode from "../components/icons/DarkMode.astro";
import LightMode from "../components/icons/LightMode.astro";
---

<!doctype html>
<html lang="en" class="transition duration-300 ease-in-out">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tw-elements/dist/css/index.min.css"
    />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Desarrollador fullstack ubicado en Monterrey. Especializado en Nextjs, React, Node, Laravel y Odoo."
    />
    <title>Daan Sol√≠s - Desarrollador & Programador web</title>
  </head>

  <body class="relative dark:text-gray-100">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-screen transition
      bg-white bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]
      dark:bg-neutral-950 dark:bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>

    <header class="w-full py-4 fixed top-0 z-10">
      <nav class="flex justify-center md:justify-end mx-4">
        <ul
          class="flex items-center gap-1 md:gap-3 text-sm font-semibold bg-white dark:bg-slate-800 dark:bg-opacity-50 shadow-lg bg-opacity-50 backdrop-blur-lg rounded-md px-4 py-2"
        >
          <li>
            <a
              class="p-1 rounded-md hover:text-mark-light dark:hover:text-mark-dark transition"
              href="#top">Inicio</a
            >
          </li>
          <li>
            <a
              class="p-1 rounded-md hover:text-mark-light dark:hover:text-mark-dark transition"
              href="#experience">Experiencia</a
            >
          </li>
          <li>
            <a
              class="p-1 rounded-md hover:text-mark-light dark:hover:text-mark-dark transition"
              href="#porfolio">Portafolio</a
            >
          </li>
          <li>
            <a
              class="p-1 rounded-md hover:text-mark-light dark:hover:text-mark-dark transition"
              href="#footer">Contacto</a
            >
          </li>
          <li>
            <button
              id="my-toggle-button"
              class="p-1 rounded-md hover:text-mark-light dark:hover:text-mark-dark transition m-0"
            >
              <LightMode
                class="size-4 fill-white hidden dark:block dark:hover:fill-mark-dark transition"
              />
              <DarkMode
                class="size-4 fill-black block dark:hidden hover:fill-mark-light transition"
              />
            </button>
          </li>
        </ul>
      </nav>
    </header>

    <main class="w-full px-4">
      <slot />
    </main>

    <Footer />

    <script src="/src/scripts/themeToggle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flowbite@3.1.1/dist/flowbite.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/index.min.js"></script>
    <script src="/src/scripts/initSwipers.js"></script>
  </body>
</html>

<style>
  /* Variante Regular */
  @font-face {
    font-family: "Garet";
    src: url("../fonts/Garet-Regular.ttf") format("truetype");
    font-weight: 400; /* Normal */
    font-style: normal;
  }

  /* Variante Bold */
  @font-face {
    font-family: "Garet";
    src: url("../fonts/Garet-Bold.ttf") format("truetype");
    font-weight: 700; /* Bold */
    font-style: normal;
  }

  /* Variante Bold */
  @font-face {
    font-family: "Garet";
    src: url("../fonts/Garet-Regular-Italic.ttf") format("truetype");
    font-weight: 400; /* Bold */
    font-style: italic;
  }

  :root {
  }
  html,
  body {
    font-family: "Garet", sans-serif;
    color: #050505;
    display: flex;
    flex-direction: column;
    justify-content: center;
    scroll-behavior: smooth;
  }

</style>
