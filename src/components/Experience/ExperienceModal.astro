---
import Python from "../icons/Python.astro";
const { id, company, features } = Astro.props;
---

<div
  id=`experience-modal-${id}`
  tabindex="-1"
  aria-hidden="true"
  class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-full bg-black bg-opacity-50 max-h-full"
>
  <div class="relative z- p-4 w-full max-w-2xl max-h-full z-30">
    <!-- Modal content -->
    <div class="relative bg-white rounded-lg shadow-sm dark:bg-slate-800">
      <!-- Modal header -->
      <div
        class="flex items-center justify-between p-4 md:p-5 md:px-10 border-b rounded-t dark:border-gray-600 border-gray-200"
      >
        <div>
          <h3 class="text-xl text-mark-light dark:text-mark-dark">Logros en</h3>
          <span class="text-2xl font-semibold text-[#050505] dark:text-slate-300">{company}</span>
        </div>
        <button
          type="button"
          class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
          data-modal-hide=`experience-modal-${id}`
        >
          <svg
            class="w-3 h-3"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 14 14"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"></path>
          </svg>
          <span class="sr-only">Close modal</span>
        </button>
      </div>
      <!-- Modal body -->
      <div class="p-4 md:p-5 space-y-4">
        <div id="controls-carousel" class="relative h-full w-full" data-carousel="static">
            <!-- Carousel wrapper -->
            <div class="relative h-80 overflow-hidden rounded-lg md:h-96">
                {features?.map((feature:any) => (
                    <div class="hidden duration-700 ease-in-out overflow-y-scroll md:overflow-hidden no-scrollbar" data-carousel-item=`${feature.active ? "active" : ""}`>
                        <div class="absolute block h-full w-full md:px-6 -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2">
                            <div class="size-10 md:size-12 rounded-full bg-mark-light dark:bg-slate-500 p-2 mb-4"><feature.icon class="size-6 md:size-8 fill-slate-100" /></div>
                            <h3 class="font-semibold text-xl text-[#050505] dark:text-slate-300 mb-4">{feature.name}</h3>
                            <p class="text-sm md:text-base mb-6 text-slate-800 dark:text-slate-300 text-pretty">{feature.description}</p>
                            <h4 class="text-sm font-semibold">Tecnolog√≠as usadas:</h4>
                        </div>
                    </div>
                ))}
            </div>
            <!-- Slider controls -->
            <div class="relative mt-14 md:mt-8">            
                <button type="button" class="absolute top-0 start-0 z-30 flex items-end justify-center h-full pr-4 cursor-pointer group focus:outline-none" data-carousel-prev>
                <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-mark-light dark:bg-slate-500 group-hover:bg-mark-light-active dark:group-hover:bg-slate-700 group-focus:ring-4 group-focus:bg-mark-light-active dark:group-focus:ring-gray-800/70 group-focus:outline-none transition">
                    <svg class="w-4 h-4 text-slate-100 dark:text-[#f3f4f6] rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 1 1 5l4 4"/>
                    </svg>
                    <span class="sr-only">Previous</span>
                </span>
                </button>
                <button type="button" class="absolute top-0 end-0 z-30 flex items-end justify-center h-full pl-4 cursor-pointer group focus:outline-none" data-carousel-next>
                    <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-mark-light dark:bg-slate-500 group-hover:bg-mark-light-active dark:group-hover:bg-slate-700 group-focus:ring-4 group-focus:bg-mark-light-active dark:group-focus:ring-gray-800/70 group-focus:outline-none transition">
                        <svg class="w-4 h-4 text-slate-100 dark:text-[#f3f4f6] rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 6 10">
                            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 9 4-4-4-4"/>
                        </svg>
                        <span class="sr-only">Next</span>
                    </span>
                </button>
            </div>
        </div>



      </div>
    </div>
  </div>
</div>
