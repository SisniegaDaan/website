---
const { id, gallery } = Astro.props;
---

<div id=`porfolio-gallery-${id}` tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-full bg-black bg-opacity-50 max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow-sm bg-opacity-50 dark:bg-slate-800 dark:bg-opacity-50">
            <!-- Modal header -->
            <div class="w-full flex items-center absolute bg-transparent justify-between p-4 md:p-5 md:px-10">
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white z-[51]" data-modal-hide=`porfolio-gallery-${id}`>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class=`myGallerySwiper${id} swiper w-full h-full`>
                <div class="swiper-wrapper full-w h-full">
                    {gallery.map((image:any) => (
                        <div class="swiper-slide rounded-lg">
                            <img src=`${image.dataSrc}` alt=`${image.alt}` />
                        </div>
                    ))}

                </div>
            </div>
        </div>
    </div>
</div>
